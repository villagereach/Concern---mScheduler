<?xml version="1.0" encoding="utf-8"?>
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/selectDateScroll" android:layout_width="fill_parent" android:layout_height="fill_parent" >
            <LinearLayout
              android:id="@+id/selectDateRoot"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="10dp"
              android:scrollbars="vertical" >
                <CheckBox android:id="@+id/selectDateAllDates" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="All Appointments" />
                <DatePicker android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/selectDateWhen"  />
                <LinearLayout android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:gravity="center_horizontal" android:padding="15dp">
                    <Button android:id="@+id/selectDateOk" android:layout_height="wrap_content" android:layout_width="100dp" android:layout_weight="1" android:text="OK"/>
                    <Button android:id="@+id/selectDateCancel" android:layout_height="wrap_content" android:layout_width="100dp" android:layout_weight="1" android:text="Cancel"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
